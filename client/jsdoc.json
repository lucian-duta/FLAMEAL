{
  "plugins": [
    "plugins/markdown",
    "./node_modules/better-docs/category",
    "./node_modules/better-docs/component"
  ],
  "recurseDepth": 10,

  "source": {
    "include": ["./src", "../server"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules|bower_components|test|tests|example|examples|build|dist|lib|release|bin|.gitignore|.git|.svn|.hg|.DS_Store|.idea|.vscode|jsdoc|.json)"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "search": true,
    "better-docs": {
      "name": "FLAMEAL Documentation",
      "title": "FLAMEAL Documentation",
      "css": "style.css",
      "trackingCode": "tracking-code-which-will-go-to-the-HEAD",
      "hideGenerator": true,
      "navLinks": [
        {
          "label": "Github",
          "href": "https://github.com/lucian-duta/FLAMEAL"
        },
        {
          "label": "Live Demo",
          "href": "https://flameal.techlmd.co.uk"
        }
      ]
    }
  },
  "tags": {
    "allowUnknownTags": ["category", "component", "subcategory"]
  },

  "opts": {
    "encoding": "utf8",
    "readme": "../README.md",
    "recurse": true,
    "verbose": true,

    "template": "./node_modules/better-docs"
  }
}
